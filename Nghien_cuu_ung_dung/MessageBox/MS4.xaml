<Window x:Class="Nghien_cuu_ung_dung.MessageBox.MS4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nghien_cuu_ung_dung.MessageBox"
        mc:Ignorable="d"
        Title="MS4"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Grid>
        <Border Background="White"/>
        <Label Content="Hãy chọn thời gian bắt đầu và thời gian kết thúc" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Margin="0,67,0,0"/>
        <Button Margin="142,130,142,38"
                Content="OK" IsDefault="True" Click="Button_Click"/>
    </Grid>
</Window>
