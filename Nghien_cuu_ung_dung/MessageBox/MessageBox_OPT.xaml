        mc:Ignorable="d"
        Title="MessageBox_OPT" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize" Loaded="Window_Loaded">
