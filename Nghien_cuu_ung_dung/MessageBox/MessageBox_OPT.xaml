        <Border Background="White">
            <TextBlock x:Name="LabelError1"
                Text="LL"
                FontFamily="Arial"
                FontSize="9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap"
                Opacity = "100" 
                Foreground="#FFFD9797" RenderTransformOrigin="-0.16,0.766" Margin="144,141,0,0"/>
        </Border>
        <Button x:Name="Button1"
                Margin="142,158,143,10"
                Content="Xác nhận" Click="Button_Click" IsDefault="True">
        </Button>
        <TextBox x:Name="Textbox1"
            FontSize="16"
            Margin="92,77,93,90" TextAlignment="Center" >
        </TextBox>
        <Label Content="Nhập mã xác nhận" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Height="26" 
                Width="110" Margin="0,46,0,0"/>
        <Label Name="lblTime" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="252,115,0,0" Height="25" Width="24" />
        <TextBlock Height="NaN" Margin="126,120,144,65" Width="NaN" Text="Mã xác nhận bị hủy sau" />
    </Grid>
</Window>
